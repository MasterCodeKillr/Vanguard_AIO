<UserControl x:Class="Vanguard_AIO.Components.ForwardButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vanguard_AIO.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Border x:Name="forwardButtonBorder" CornerRadius="400" Background="Gray" MouseEnter="forwardButtonBorder_MouseEnter" MouseLeave="forwardButtonBorder_MouseLeave" >
        <Image Source="/Images/arrow.png" RenderTransformOrigin="0.5,0.5"></Image>
    </Border>
</UserControl>
