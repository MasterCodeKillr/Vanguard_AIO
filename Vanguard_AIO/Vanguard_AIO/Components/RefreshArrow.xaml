<UserControl x:Class="Vanguard_AIO.Components.RefreshArrow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vanguard_AIO.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Border x:Name="refreshButtonBorder" CornerRadius="400" Background="Gray" MouseEnter="refreshButtonBorder_MouseEnter" MouseLeave="refreshButtonBorder_MouseLeave">
        <Image Source="/Images/refresh_arrow.png" RenderTransformOrigin="0.5,0.5" Width="20" Height="20">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Border>
</UserControl>
