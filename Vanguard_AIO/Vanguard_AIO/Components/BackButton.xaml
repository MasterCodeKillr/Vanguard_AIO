<UserControl x:Class="Vanguard_AIO.Components.BackButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vanguard_AIO.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Border x:Name="backButtonBorder" CornerRadius="400" Background="Gray" MouseEnter="Border_MouseEnter" MouseLeave="backButtonBorder_MouseLeave">
        <Image Source="/Images/arrow.png" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Border>
</UserControl>
