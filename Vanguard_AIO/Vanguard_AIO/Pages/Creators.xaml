<Page x:Class="Vanguard_AIO.Pages.Creators"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vanguard_AIO.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1" Background="#FFCFA200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="btAddCreator" Style="{StaticResource ExportButtonTheme}" Content="Add Creator" HorizontalAlignment="Center" Height="30" VerticalAlignment="Center" Width="115" Foreground="White" FontSize="16" FontFamily="Impact" Click="btAddCreator_Click" />
        <Border Grid.Row="1" Background="DimGray" CornerRadius="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <UniformGrid x:Name="creatorGrid" Columns="4" VerticalAlignment="Top">

                </UniformGrid>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
